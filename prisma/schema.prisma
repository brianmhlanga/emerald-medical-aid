
generator client  {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id                String         @id @default(cuid())
  email              String         @unique
  username           String         @unique
  name               String?
  title              String?      
  surname            String?
  phone              String?        @unique
  age                Int?
  gender             Gender     
  profile            profile_type @default(ADMIN)
  password           String
  salt               String
  current_logged_in_at   DateTime
  last_logged_in_at      DateTime
  account_status      status @default(INACTIVE)
  created_at          DateTime       @default(now())
  updated_at          DateTime @updatedAt

  @@map("user")

}
model Individual {
  id String @id @default(cuid())
  first_name String
  last_name String
  title String
  date_of_birth DateTime
  id_number String
  gender Gender
  membership_number String?
  cell_number String?
  physical_address String?
  place_of_birth String?
  marital_status String?
  employer_name String?
  employer_contact_number String?
  occupation String?
  department String?
  ec_number String?
  station_number String?
  depandancy Dependent[]
  package_type String?
  package_details String?
  previous_ailments Json?
  other_information String?
  previous_society_name String?
  tyform Tyforms?
  previous_package_name String?
  from_date DateTime?
  to_date DateTime?
  created_at          DateTime       @default(now())
  updated_at          DateTime @updatedAt
  @@map("individual")

}

model Tyforms {
  id String @id @default(cuid())
  first_name String?
  last_name String?
  id_number String?
  ministry String?
  department_code String?
  individual_id String? @unique
  individual Individual? @relation(fields: [individual_id],references: [id])
  station_code String?
  selected_application_type String?
  card_type String?
  section String?
  subsection String?
  employee_code_number String?
  cd String?
  payee_code String?
  amount_deducted Float?
  from_date_ty String?
  to_date_ty String?
  policy_medical_aid_number String?
  created_at          DateTime       @default(now())
  updated_at          DateTime @updatedAt
}

model Dependent {
  id String @id @default(cuid())
  first_name String?
  last_name String?
  individual_id String?
  relationship String?
  dp Individual? @relation(fields: [individual_id],references: [id])
  gender Gender?
  id_number String?
  created_at          DateTime       @default(now())
  updated_at          DateTime @updatedAt
}

enum profile_type {
  ADMIN
  STUDENT
}
 
 enum status {
  ACTIVE
  INACTIVE
 }

 enum Gender {
  MALE
  FEMALE
 }
 


